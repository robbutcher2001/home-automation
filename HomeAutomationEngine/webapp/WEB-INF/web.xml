<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>HomeAutomationEngine</display-name>
  <listener>
    <listener-class>co.uk.rob.apartment.automation.controller.ApplicationInitialiser</listener-class>
  </listener>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>401</error-code>
    <location>/accessDenied.html</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>
  <error-page>
    <error-code>406</error-code>
    <location>/login</location>
  </error-page>
  
  <filter>
    <filter-name>authenticationManagementFilter</filter-name>
    <filter-class>co.uk.rob.apartment.automation.model.filters.AuthenticationManagementFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>authenticationManagementFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>co.uk.rob.apartment.automation.controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>verifyEngineOnline</servlet-name>
    <servlet-class>co.uk.rob.apartment.automation.controller.SystemVerificationController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>verifyEngineOnline</servlet-name>
    <url-pattern>/verifyEngineOnline</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>msoMessage</servlet-name>
    <servlet-class>co.uk.rob.apartment.automation.controller.MSOMessageController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>msoMessage</servlet-name>
    <url-pattern>/msoMessage</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>disableApartmentAlarm</servlet-name>
    <servlet-class>co.uk.rob.apartment.automation.controller.ApartmentAlarmController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>disableApartmentAlarm</servlet-name>
    <url-pattern>/disableApartmentAlarm/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>appDisableAlarm</servlet-name>
    <servlet-class>co.uk.rob.apartment.automation.controller.AppApartmentAlarmController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>appDisableAlarm</servlet-name>
    <url-pattern>/appDisableAlarm</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>deviceStatus</servlet-name>
    <servlet-class>co.uk.rob.apartment.automation.controller.DeviceStatusJsonController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deviceStatus</servlet-name>
    <url-pattern>/deviceStatus/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>lounge</servlet-name>
    <servlet-class>co.uk.rob.apartment.automation.controller.LoungeKitchenController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>lounge</servlet-name>
    <url-pattern>/lounge</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>loungeCamera</servlet-name>
    <servlet-class>co.uk.rob.apartment.automation.controller.LoungeKitchenCameraController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loungeCamera</servlet-name>
    <url-pattern>/loungeCamera</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>bedroom1</servlet-name>
    <servlet-class>co.uk.rob.apartment.automation.controller.BedroomOneController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>bedroom1</servlet-name>
    <url-pattern>/bedroom1</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>chipRestart</servlet-name>
    <servlet-class>co.uk.rob.apartment.automation.controller.ZwayChipRestartController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>chipRestart</servlet-name>
    <url-pattern>/chipRestart</url-pattern>
  </servlet-mapping>
</web-app>